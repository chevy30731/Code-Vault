{
  "expo": {
    "name": "Code Vault",
    "slug": "code-vault",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "codevault",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "privacy": "public",
    "extra": {
      "enableCrashReporting": false,
      "enableAnalytics": false
    },
    "updates": {
      "enabled": false,
      "checkAutomatically": "NEVER",
      "fallbackToCacheTimeout": 0
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.onhercules.codevault",
      "infoPlist": {
        "NSCameraUsageDescription": "Code Vault needs camera access to scan QR codes. Your camera is only used for real-time QR code detection and no images are saved or uploaded.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false
        }
      }
    },
        "android": {
      "package": "app.onhercules.codevault",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "blockedPermissions": [
        "ACTIVITY_RECOGNITION",
        "android.permission.ACTIVITY_RECOGNITION",
        "com.google.android.gms.permission.ACTIVITY_RECOGNITION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_PHONE_STATE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "usesCleartextTraffic": false,
      "networkSecurityConfig": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Code Vault needs camera access to scan QR codes."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}